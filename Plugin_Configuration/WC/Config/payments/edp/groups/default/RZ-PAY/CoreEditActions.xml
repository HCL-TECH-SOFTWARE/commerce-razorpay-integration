<EditRules 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:noNamespaceSchemaLocation="com/ibm/commerce/edp/parsers/Edits.xsd"
  xmlns:payment = "http://www.w3.org/payments">
  
  <AddOrderAmount>
    <EditAction name="ConsumeAmount" msg="Edit Add Order Amount"/>
  </AddOrderAmount>
  
  <ReduceOrderAmount>
    <EditAction name="ConsumeAmount" msg="Edit Reduce Order Amount"/>
  </ReduceOrderAmount>
  
  <ReplacePaymentInstruction>
    <EditAction name="ConsumeAmount" msg="Edit Replace Payment Instruction"/>
  </ReplacePaymentInstruction>
</EditRules>
